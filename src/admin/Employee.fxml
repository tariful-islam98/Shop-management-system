<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox style="-fx-background-color: #CFCCDF;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.EmployeeController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="35.0">
         <children>
            <Text fill="#830000" strokeType="OUTSIDE" strokeWidth="0.0" text="Employee">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets left="7.0" />
         </padding>
      </HBox>
      <TableView fx:id="employeeTable" style="-fx-background-color: #CFCCDF;">
        <columns>
          <TableColumn fx:id="nameCol" prefWidth="187.0" text="Name" />
          <TableColumn fx:id="addressCol" prefWidth="142.0" text="Address" />
            <TableColumn fx:id="contactCol" prefWidth="160.0" text="Contact" />
            <TableColumn fx:id="salaryCol" prefWidth="108.0" text="Salary" />
        </columns>
         <padding>
            <Insets left="2.0" />
         </padding>
      </TableView>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button mnemonicParsing="false" onAction="#customizeBtnAction" style="-fx-background-color: #2450B5; -fx-background-radius: 30;" text="Customize" textFill="WHITE">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="7.0" top="7.0" />
         </padding>
      </HBox>
   </children>
</VBox>
