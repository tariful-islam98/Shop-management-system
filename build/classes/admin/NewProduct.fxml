<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="15.0" style="-fx-background-color: #CFCCDF;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="admin.NewProductController">
   <children>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label text="Product Name:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="productNameField" style="-fx-border-color: black; -fx-border-width: 0 0 1 0; -fx-background-color: transparent;">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="7.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" spacing="10.0">
         <children>
            <Label text="Price per Unit:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="ppuField" style="-fx-border-color: black; -fx-border-width: 0 0 1 0; -fx-background-color: transparent;">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="7.0" />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="7.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="53.0" spacing="10.0">
         <children>
            <Label text="Quantity:">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <TextField fx:id="quantityField" style="-fx-border-color: black; -fx-border-width: 0 0 1 0; -fx-background-color: transparent;">
               <font>
                  <Font size="18.0" />
               </font>
               <HBox.margin>
                  <Insets left="46.0" />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets left="7.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0">
         <children>
            <Button mnemonicParsing="false" onAction="#addButtonAction" style="-fx-background-color: #2450B5; -fx-background-radius: 30;" text="Add New Product" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
         <padding>
            <Insets left="7.0" />
         </padding>
      </HBox>
   </children>
</VBox>
