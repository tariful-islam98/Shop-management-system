<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane style="-fx-background-color: #CFCCDF;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopmanagement.OptionsController">
   <center>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#salesBtnAction" prefHeight="62.0" prefWidth="140.0" style="-fx-background-color: #D5E4F1; -fx-border-color: #707070; -fx-background-radius: 20; -fx-border-radius: 20;" text="Sales">
                     <font>
                        <Font name="System Italic" size="25.0" />
                     </font>
                  </Button>
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#accBtnAction" prefHeight="62.0" prefWidth="140.0" style="-fx-background-color: #D5E4F1; -fx-border-color: #707070; -fx-background-radius: 20; -fx-border-radius: 20;" text="Accounts">
                     <font>
                        <Font name="System Italic" size="25.0" />
                     </font>
                  </Button>
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#productsBtnAction" prefHeight="62.0" prefWidth="140.0" style="-fx-background-color: #D5E4F1; -fx-border-color: #707070; -fx-background-radius: 20; -fx-border-radius: 20;" text="Products">
                     <font>
                        <Font name="System Italic" size="25.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#purchaseBtnAction" prefHeight="62.0" prefWidth="140.0" style="-fx-background-color: #D5E4F1; -fx-border-color: #707070; -fx-background-radius: 20; -fx-border-radius: 20;" text="Purchase">
                     <font>
                        <Font name="System Italic" size="25.0" />
                     </font>
                  </Button>
                  <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#userAccBtnAction" style="-fx-background-color: #D5E4F1; -fx-border-color: #707070; -fx-background-radius: 20; -fx-border-radius: 20;" text="User Account">
                     <font>
                        <Font name="System Italic" size="25.0" />
                     </font>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
