<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopmanagement.LoginPageController">
   <children>
      <VBox spacing="20.0" style="-fx-background-color: #CFCCDF;">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Login">
               <font>
                  <Font size="25.0" />
               </font>
            </Text>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="User Name">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <TextField fx:id="userNameField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="435.0">
               <VBox.margin>
                  <Insets top="-8.0" />
               </VBox.margin>
               <font>
                  <Font size="18.0" />
               </font>
            </TextField>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Password">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
            <PasswordField fx:id="passwordField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="435.0">
               <font>
                  <Font size="18.0" />
               </font>
            </PasswordField>
         </children>
         <padding>
            <Insets bottom="10.0" left="32.0" top="20.0" />
         </padding>
      </VBox>
      <VBox alignment="CENTER" style="-fx-background-color: #CFCCDF;">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#loginButtonAction" prefHeight="41.0" prefWidth="256.0" style="-fx-background-color: #875CB2; -fx-background-radius: 35;" text="Login" textFill="WHITE">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <font>
                  <Font size="25.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</VBox>
