<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox spacing="5.0" style="-fx-background-color: #CFCCDF;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="shopmanagement.PurchaseController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="35.0">
         <children>
            <Text fill="#790303" strokeType="OUTSIDE" strokeWidth="0.0" text="Purchase">
               <font>
                  <Font size="20.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets left="7.0" />
         </padding>
      </HBox>
      <HBox>
         <children>
            <VBox spacing="4.0" style="-fx-border-color: gray; -fx-border-width: 0 2 0 0;">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Item">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <ChoiceBox fx:id="itemField" prefHeight="35.0" prefWidth="322.0" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Quantity">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <TextField fx:id="quantityField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="322.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Price  per Unit">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <TextField fx:id="ppuField" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="322.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Text layoutX="10.0" layoutY="127.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Total Cost">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
                  <TextField fx:id="totalCost" layoutX="10.0" layoutY="131.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="322.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
               </children>
               <padding>
                  <Insets left="7.0" right="3.0" top="3.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Text fill="#1b0606" layoutX="10.0" layoutY="141.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Supplier Name">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="supplierNameField" layoutX="10.0" layoutY="155.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="260.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Text fill="#1b0606" layoutX="10.0" layoutY="26.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Supplier Address">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="supplierAdrsField" layoutX="10.0" layoutY="41.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="260.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Text fill="#1b0606" layoutX="10.0" layoutY="102.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Contact no.">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                  <TextField fx:id="contactField" layoutX="10.0" layoutY="117.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="260.0">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </TextField>
                  <Text fill="#1b0606" layoutX="10.0" layoutY="251.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Date">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Text>
                  <DatePicker fx:id="dateField" prefHeight="35.0" prefWidth="260.0" />
               </children>
               <padding>
                  <Insets left="3.0" right="3.0" />
               </padding>
            </VBox>
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT">
         <children>
            <Button mnemonicParsing="false" onAction="#addButtonAction" style="-fx-background-color: #2450B5; -fx-background-radius: 30;" text="Add to Stock" textFill="WHITE">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
         </children>
         <padding>
            <Insets left="7.0" top="9.0" />
         </padding>
      </HBox>
   </children>
</VBox>
